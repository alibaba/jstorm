    <module>jstorm-utility/ons</module>
    <module>jstorm-utility/jstorm-flux</module>
    <module>jstorm-utility/jstorm-elasticsearch</module>
    <module>jstorm-on-yarn</module>
    <module>jstorm-hbase-metrics-plugin</module>
    <module>jstorm-hdfs</module>
  </modules>

